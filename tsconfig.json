{
  "compilerOptions": {
    "target": "ES2022",
  "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "resolveJsonModule": true,
    "isolatedModules": true, 
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["src/shared/*"] 
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "lib": ["ES2022"],
    "types": ["node"], 
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [ 
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
} 